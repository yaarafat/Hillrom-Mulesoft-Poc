	<flow name="implementationFlow" doc:id="532eb641-ac39-4761-b9a2-d9b6b4431a7c" >
		<jms:publish doc:name="Publish" doc:id="8a48844c-c331-4f52-844b-bc277c664727" config-ref="JMS_Config" destination="CovidService"/>
		<ee:transform doc:name="Transform Message" doc:id="608a7260-d43e-4249-bbde-c8198c07c7a5" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/csv separator = ",", quoteValues = true
fun replaceComma(fieldValue) = if(fieldValue != null) (fieldValue replace "," with "','") else if(fieldValue == null) (null) else null
---
payload.sessions map {
    center_id :$.center_id,
    name : $.name,
    vaccine : $.vaccine,
    address : $.address,
    pincode : $.pincode,
    from : $.from,
    to : $.to,
    date : $.date,
    slot : replaceComma($.slots joinBy(","))
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<file:write doc:name="Write" doc:id="cf0dcd04-edc1-4f65-94fd-188c3c7a4c65" config-ref="File_Config" path="C:\Users\yaarafat\Desktop\New folder\File_Connector\covid_Vaccine_details.csv"/>
